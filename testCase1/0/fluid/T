FoamFile
{
    format      ascii;
    location    "0/fluid";
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    top
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    film
    {
        type            coupledTemperature;
        value           $internalField;
    }

    walls
    {
        // adiabatic walls
        type            zeroGradient;
    }

    bottom
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }
}

// ************************************************************************* //
