FoamFile
{
    format      ascii;
    class       volVectorField;
    location    "0/film";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    #includeEtc "caseDicts/setConstraintTypes"

    top
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    bottom
    {
        type            inletOutlet;
        inletValue      $internalField;
        value           $internalField;
    }

    walls
    {
        type            noSlip;
    }

    filmWall
    {
        type            noSlip;
    }

    // interface patch
    surface
    {
        type            filmSurfaceVelocity;
        Cs              0.005;
        value           $internalField;
    }
}


// ************************************************************************* //
