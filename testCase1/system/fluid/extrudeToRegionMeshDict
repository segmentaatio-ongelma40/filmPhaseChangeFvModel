FoamFile
{
    format      ascii;
    class       dictionary;
    object      extrudeToRegionMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

//- Name of the region to create
region           film;

//- Patches to extrude
patches          ( film );

//- Extrusion model
extrudeModel     linearNormal;

//- Extrude faces inwards?
intrude          yes;

adaptMesh        no;

patchTypes       ( mappedExtrudedWall );
patchNames       ( film );

//- Types/names of neighbour region external boundary faces
regionPatchTypes ( filmWall );
regionPatchNames ( wall );

//- Types/names of neighbour region internal interface faces
regionOppositePatchTypes ( mappedFilmSurface );
regionOppositePatchNames ( surface );

//- Settings

linearNormalCoeffs
{
    thickness    0.0001;
    nLayers          1;
    expansionRatio   1;
}

